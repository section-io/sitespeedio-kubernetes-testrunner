apiVersion: batch/v1
kind: Job
metadata:
  name: sitespeedio
spec:
  template:
    metadata:
      labels:
        app: sitespeedio
    spec:
      containers:
      - name: sitespeedio
        image: ${image}
        args:
${args}
        - --graphite.namespace=${graphite_namespace}
        - --graphite.host=graphite${graphite_host_suffix}
        securityContext:
          privileged: true
      restartPolicy: Never
